<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">

    <TextView
        android:id="@+id/display"
        android:text=""
        android:paddingLeft="20dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:textColor="@color/black"
        android:textSize="40dp"
        />
    <TextView
        android:id="@+id/res"
        android:textSize="40dp"
        android:paddingLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:textColor="@color/black">

    </TextView>
    <LinearLayout
        android:weightSum="5"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:weightSum="4"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp" >
            <Button
                android:id="@+id/clear"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="clear"
                android:textSize="15dp"></Button>
            <Button
                android:id="@+id/pow"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="^"
                android:textSize="30dp"></Button>
            <Button
                android:id="@+id/mod"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="%"
                android:textSize="30dp"></Button>
            <Button
                android:id="@+id/div"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="/"
                android:textSize="30dp"></Button>
        </LinearLayout>
        <LinearLayout
            android:weightSum="4"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp" >
            <Button
                android:id="@+id/seven"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="7"
                android:textSize="20dp"></Button>
            <Button
                android:id="@+id/eight"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="8"
                android:textSize="20dp"></Button>
            <Button
                android:id="@+id/nine"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="9"
                android:textSize="20dp"></Button>
            <Button
                android:id="@+id/mul"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="*"
                android:textSize="20dp"></Button>
        </LinearLayout>
        <LinearLayout
            android:weightSum="4"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp" >
            <Button
                android:id="@+id/four"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="4"
                android:textSize="20dp"></Button>
            <Button
                android:id="@+id/five"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="5"
                android:textSize="20dp"></Button>
            <Button
                android:id="@+id/six"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="6"
                android:textSize="20dp"></Button>
            <Button
                android:id="@+id/sub"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="-"
                android:textSize="30dp"></Button>
        </LinearLayout>
        <LinearLayout
            android:weightSum="4"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp" >

            <Button
                android:id="@+id/bt1"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="1"
                android:textSize="20dp"
                tools:ignore="InvalidId" />
            <Button
                android:id="@+id/two"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="2"
                android:textSize="20dp"></Button>
            <Button
                android:id="@+id/three"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="3"
                android:textSize="20dp"></Button>
            <Button
                android:id="@+id/add"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="+"
                android:textSize="20dp"></Button>
        </LinearLayout>
        <LinearLayout
            android:weightSum="4"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp" >
            <Button
                android:id="@+id/zero"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="0"
                android:textSize="20dp"></Button>
            <Button
                android:id="@+id/dot"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="."
                android:textSize="20dp"></Button>
            <Button
                android:id="@+id/equal"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="="
                android:textSize="20dp"></Button>

        </LinearLayout>



    </LinearLayout>



</LinearLayout>